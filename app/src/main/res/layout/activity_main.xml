<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guid_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#DFE1E6"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/hp_bottom_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/hp_bottom_image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/tab_contact_unselect" />

                <TextView
                    android:id="@+id/hp_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:text="fragment1"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/service_bottom_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/service_bottom_image"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/tab_home_unselect" />

                <TextView
                    android:id="@+id/service_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:text="fragment2"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/action_bottom_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/action_bottom_image"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/tab_more_unselect" />

                <TextView
                    android:id="@+id/action_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:text="fragment3"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myself_bottom_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/myself_bottom_image"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/tab_speech_unselect" />

                <TextView
                    android:id="@+id/myself_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:text="fragment4"
                    android:textSize="10sp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>

